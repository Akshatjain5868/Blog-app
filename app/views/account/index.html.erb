  <div class="container">
    <input type="checkbox" id="flip">
    <div class="cover">
      <div class="front">
        <div class="frontImg">
            <%= image_tag "frontImg.jpg"%>
        </div>
        <div class="text">
          <span class="text-1">Every new friend is a <br> new adventure</span>
          <span class="text-2">Let's get connected</span>
        </div>
      </div>
      <div class="back">
        <div class="backImg">
            <%= image_tag "backImg.jpg"%>
        </div>
        <div class="text">
          <span class="text-1">Complete miles of journey <br> with one step</span>
          <span class="text-2">Let's get started</span>
        </div>
      </div>
    </div>
    <div class="forms">
      <div class="form-content">
        <div class="login-form">
          <div class="title">
            Login
          </div>
          <%= flash[:notice] %>
          <%= form_with url: "/account/login", method: :post do |form|%>
          
            <div class="input-boxes">
              <div class="input-box">
                <i class="fas fa-envelope"></i>
                <%= form.text_field :email, placeholder: "Enter Your Email"%>
              </div>
              <div class="input-box">
                <i class="fas fa-lock"></i>
                <%= form.password_field :password, placeholder: "Enter Your Password" %>
              </div>
              <div class="text"><%= link_to "Forgot your password?" ,password_forgot_password_path%></div>
              <div class="button input-box">
                <%= form.submit "Login"%>
              </div>
              <div class="text sign-up-text">Don't have an account? <label for="flip">Sigup now</label></div>
            </div>
          <% end %>
        </div>
        <div class="signup-form">
          <div class="title">
            Signup
          </div>
          <%= flash[:notice] %>
          <%= form_with url: "/account/signup", method: :post do |form|%>
          
            <div class="input-boxes">
              <div class="input-box">
                <i class="fas fa-user"></i>
                <%= form.text_field :first_name , placeholder: "Enter Your First Name"%>
              </div>
              <div class="input-box">
                <i class="fas fa-user"></i>
                <%= form.text_field :last_name, placeholder: "Enter Your Last Name" %>
              </div>
              <div class="input-box">
                <i class="fas fa-envelope"></i>
                <%= form.text_field :email, placeholder: "Enter Your Email"%>
              </div>
              </div>
              <div class="input-box">
                <i class="fas fa-lock"></i>
                <%= form.password_field :password, placeholder: "Enter Your Password" %>
              </div>
              <div class="input-box">
                <i class="fas fa-lock"></i>
                <%= form.password_field :password_confirmation, placeholder: "Enter Password Again" %>
              </div>
              <div class="button input-box">
                <%= form.submit "Signup"%>
              </div>
              <div class="text sign-up-text">Already have an account? <label for="flip">Login now</label></div>
            </div>
          <%end%>   
           
        </div>
      </div>
    </div>
  </div>